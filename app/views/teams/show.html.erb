<div class="column">
  <div class="panel">
    <div class="panel-header">
      <div class="panel-title text-center"><h4><%= @team.team_name %></h4></div>
      <div class="panel-subtitle text-center"><%= @team.tournament.tournament_name %></div>
    </div>
    <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Rank</th>
          <th>Player</th>
          <th>Round 1</th>
          <th>Round 2</th>
          <th>Round 3</th>
          <th>Round 4</th>
        </tr>
      </thead>
      <tbody>
      <% @team.team_players.each do |team_player| %>
        <tr>
          <td><%= team_player.position %></td>
          <td><%= team_player.player.full_name %></td>
          <% team_player.player.player_tournaments.each do |round| %>
            <td><%= round.round_1 %></td>
            <td><%= round.round_2 %></td>
            <td><%= round.round_3 %></td>
            <td><%= round.round_4 %></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
    </div>
    <div class="panel-footer">
      <% if current_user == @team.user %>
      <%= link_to 'Edit Team', edit_team_path(@team), class: "btn btn-primary input-group-btn" %>
      <% end %>
      <%= link_to 'Back', :back, class: 'btn btn-link float-right' %>
    </div>
  </div>
</div>