<div class="column">
  <p>Here are all the teams that have been created.</p>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Team</th>
        <th>Tournament</th>
        <th>Team Owner</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to team.team_name, team_path(team) %></td>
        <td><%= team.tournament.tournament_name %></td>
        <td><%= team.user.email %>
        <% if current_user == team.user %>
        <td><%= link_to "Edit", edit_team_path(team) %></td>
        <% else %>
        <td></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>