<div class="column">
  <p>Here are all the players that have been added.</p>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Player Name</th>
      </tr>
    </thead>
    <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.full_name, player_path(player) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>